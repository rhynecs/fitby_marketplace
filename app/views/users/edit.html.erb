<%= form_with model: @user do |f| %>
  <div class="field">
    <%= f.label :first_name, "First Name" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :birth_date, "Date of Birth" %><br />
    <%= f.date_field :birth_date %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "Phone Number" %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :bio, "Your bio" %><br />
    <%= f.text_area :bio, size:"70x5" %>
  </div>

  <div class ="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>  
<% end %>