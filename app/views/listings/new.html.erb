<h2>New Listing</h2>

<%= form_with object: @listing, scope: :listing do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body, size:"70x5" %>
  </p>
  <p>
    <%= f.label :address_line_1 %>
    <%= f.text_field :address_line_1 %>
  </p>
  <p>
    <%= f.label :address_line_2 %>
    <%= f.text_field :address_line_2 %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :postcode %>
    <%= f.text_field :postcode %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :main_image %>
    <%= f.file_field :main_image %>
  <p>
  <%= f.submit "Create Listing" %>
  </p>
  </div>
<% end %>
